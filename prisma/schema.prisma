generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 1. Model Category (Kategorie produktów)
// Cel: Przechowywanie kategorii produktów
model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([name])
  @@map("categories")
}

// 2. Model Product (Produkty)
// Cel: Przechowywanie informacji o produktach dostępnych w sklepie
model Product {
  id          Int         @id @default(autoincrement())
  code        String      @unique
  name        String
  description String?
  price       Float       @default(0.0)
  inStock     Boolean     @default(true)
  amount      Int         @default(0)
  image       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  categoryId  Int
  category    Category    @relation(fields: [categoryId], references: [id])
  
  cartItems   CartItem[]
  orderItems  OrderItem[]

  @@index([categoryId])
  @@index([code])
  @@map("products")
}

// NextAuth models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  cart          Cart?
  orders        Order[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 3. Model User (Użytkownicy)
// Cel: Przechowywanie danych użytkowników systemu
// 4. Model Cart (Koszyk)
// Cel: Przechowywanie aktywnego koszyka zakupowego użytkownika
model Cart {
  id        Int      @id @default(autoincrement())
  userId    String   @unique @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  items CartItem[]

  @@map("carts")
}

// 5. Model CartItem (Produkty w koszyku)
// Cel: Tabela pośrednia łącząca koszyk z produktami + ilość
model CartItem {
  id        Int      @id @default(autoincrement())
  quantity  Int      @default(1)
  
  cartId    Int
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
  @@index([cartId])
  @@index([productId])
  @@map("cart_items")
}

// 8. Enum OrderStatus (Status zamówienia)
enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

// 6. Model Order (Zamówienia)
// Cel: Przechowywanie historii zamówień użytkowników
model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique
  status      OrderStatus @default(PENDING)
  total       Float

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  items OrderItem[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([orderNumber])
  @@map("orders")
}

// 7. Model OrderItem (Produkty w zamówieniu)
// Cel: Tabela pośrednia łącząca zamówienie z produktami + szczegóły zakupu
model OrderItem {
  id            Int     @id @default(autoincrement())
  quantity      Int
  priceAtOrder  Float
  productCode   String
  productName   String
  
  orderId       Int
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId     Int
  product       Product @relation(fields: [productId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

